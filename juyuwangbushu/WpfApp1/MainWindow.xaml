<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="WpfApp1.MainWindow"
        xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
        mc:Ignorable="d"
        Title="Snowstorm Technology Batch Deployment Tool" Height="795" Width="1330">

    <Window.Resources>
        <Style x:Key="ListViewItemStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>


        <ControlTemplate x:Key="ItemTemplate" TargetType="ListViewItem">
            <Border
		BorderThickness="{TemplateBinding Border.BorderThickness}"
		Padding="{TemplateBinding Control.Padding}"
		BorderBrush="{TemplateBinding Border.BorderBrush}"
		Background="{TemplateBinding Panel.Background}"
		SnapsToDevicePixels="True">
                <ContentPresenter
			Content="{TemplateBinding ContentControl.Content}"
			ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"
			HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
			VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
			SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
            </Border>



        </ControlTemplate>

        <!--<Style TargetType="ListViewItem">
            <Setter Property="Template" Value="{StaticResource ItemTemplate}" />
        </Style>

        <DataTemplate x:Key="ItemDataTemplate">
            <CheckBox
			x:Name="checkbox"
			Content="{Binding ip}"
                IsChecked="{Binding	RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Path=IsSelected}" />

        </DataTemplate>-->

        <DataTemplate x:Key="FirstCell">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=IsSelected, 
      RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}"/>
            </StackPanel>
        </DataTemplate>



    </Window.Resources>

    <Viewbox Margin="0,0,0,-19">

        <Grid Width="1190">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="137*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="findButton" Content="Find device" HorizontalAlignment="Right" Margin="0,631,139.339,15" Width="82" Click="Button_Click"/>
            <CheckBox x:Name="selectAll" Content="select all" Click="OnSelectAllChanged" Margin="10,10,43,652" FontSize="18" />
            <ListView x:Name="listView" HorizontalAlignment="Left" Height="573" Margin="10,42,0,0" VerticalAlignment="Top" Width="178" ItemContainerStyle="{StaticResource ListViewItemStyle}" 
                SelectionMode="Multiple">

                <!--ItemTemplate="{StaticResource ItemDataTemplate}"
			CheckBox.Unchecked="OnUncheckItem">-->

                <ListView.View>
                    <GridView>
                        <GridViewColumn CellTemplate="{StaticResource FirstCell}" 
                Width="30"/>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding ip}">
                            <GridViewColumnHeader Tag="ip" Click="listViewColumnHeader_Click" Content="IP address"/>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>


            </ListView>


            <Button x:Name="installButton" Content="Batch installation" HorizontalAlignment="Left" Margin="286.661,627,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_2" Height="44" Grid.Column="1"/>
            <Button x:Name="uninstallButton" Content="Bulk uninstall" HorizontalAlignment="Left" Margin="110.661,627,0,15" Width="102" Click="Button_Click_3" Grid.Column="1"/>
            <Button x:Name="customButton" Content="Batch customization" HorizontalAlignment="Left" Margin="569.661,627,0,0" VerticalAlignment="Top" Width="112"  Height="44" Click="Button_Click_5" Grid.Column="1"/>
            <Label Content="A brief description：&#xA;1.Find device&#xA;Find all Android boards in the same network segment&#xA;Lookup is a batch call is the same directory under the program tryToConnect.bat&#xA;2.Bulk uninstall&#xA;Uninstall the selected device，&#xA;The uninstall operation is to batch call the program under the same directory. auto_uninstall.bat&#xA;3.Batch installation&#xA;Install application operations on selected devices   (The installation process takes about 30 seconds. After installation, the Android board will be restarted. Do not power off.)&#xA;The installation operation is a batch call to change the program under the same directory. install_restart.bat&#xA;4.Batch customization&#xA;Batch customization of selected devices&#xA;Customization is to call the program in the same directory as the batch. customize.bat   User-defined execution instructions can be added to this file&#xA;&#xA;The default is for the push-end app that we launched. If you want to use another app, please change the program to the same directory." HorizontalAlignment="Left" Margin="228,20,0,0" VerticalAlignment="Top" Height="358" Width="920" FontSize="16" Grid.ColumnSpan="2"/>
            <Label Content="Log:" HorizontalAlignment="Left" Margin="228,383,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.495,-0.463" Grid.ColumnSpan="2"/>
            <ScrollViewer x:Name="LogViewer" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Right" Width="886" Height="220" VerticalAlignment="Bottom" Margin="0,0,37,91" Grid.Column="1">
                <TextBlock x:Name="LogLabel" Grid.Row="0" Margin="10,10,10,10" TextWrapping="Wrap" Text=""  />
            </ScrollViewer>
            <TextBox x:Name="numText" HorizontalAlignment="Left" Height="27" Margin="162,633,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="45" IsReadOnly="True"/>
            <Label Content="Quantity" HorizontalAlignment="Left" Height="27" Margin="102,631,0,0" VerticalAlignment="Top" Width="60"/>
        </Grid>
    </Viewbox>
</Window>
